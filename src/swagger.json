{
  "openapi":"3.0.2",
  "info": {
    "title":"DevRadar",
    "version":"1.0",
    "license": {
      "name": "MIT",
      "url": "https://raw.githubusercontent.com/DiegoVictor/devradar-api/master/LICENSE"
    }
  },
  "servers": [
    {
      "url":"http://localhost:3333/v1"
    }
  ],
  "components": {
    "schemas": {
      "Developer": {
        "properties": {
          "_id": {
            "type": "string"
          },
          "techs": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "name": {
            "type": "string"
          },
          "avatar_url": {
            "type": "string"
          },
          "bio": {
            "type": "string"
          },
          "github_username": {
            "type": "string"
          },
          "location": {
            "type": "object",
            "properties": {
              "coordinates": {
                "type": "array",
                "items": {
                  "type": "number"
                }
              }
            }
          }
        }
      },
      "Error": {
        "properties": {
          "statusCode": {
            "type": "integer"
          },
          "error": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "code": {
            "type": "integer"
          },
          "docs": {
            "type": "string"
          }
        }
      }
    },
    "responses": {
      "User": {
        "description": "Return a Bearer Token and developer's information",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "developer": {
                  "$ref": "#/components/schemas/Developer"
                },
                "token": {
                  "type": "string"
                }
              }
            },
            "example": {
              "developer": {
                "_id": "613514c6606e092854b195a6",
                "techs": [
                  "Node.js",
                  "ReactJS",
                  "React Native"
                ],
                "name": "Diego Victor",
                "avatar_url": "https://avatars.githubusercontent.com/u/15165349?v=4",
                "bio": "I have been working with PHP/Laravel and JavaScript/Node.js for +5 years. Recently I started studying ReactJs and React Native :)\r\n",
                "github_username": "DiegoVictor",
                "location": {
                  "coordinates": [
                    81.6031,
                    36.6812
                  ]
                }
              },
              "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6IjYxMzUxNGM2NjA2ZTA5Mjg1NGIxOTVhNiIsImlhdCI6MTYzMDg2OTA0NiwiZXhwIjoxNjMxNDczODQ2fQ.WPAFQvVr4aGleFCggs4EV6T9EjOEZ2bQSwdDLjwgr9A"
            }
          }
        }
      },
    }
  }
}
